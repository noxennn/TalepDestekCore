@using DTOLayer.DTOs.OfficerDTOs
@model List<AssignOfficerDTO>
@{
	ViewData["Title"] = "AssignOfficer";
	Layout = "~/Views/Shared/_RequestOfficerLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
	<div class="col-12 col-sm-4 text-center text-sm-left mb-0">
		<span class="text-uppercase page-subtitle">Havale</span>
	</div>
</div>
<div class="row">
	<div class="col">
		<div class="card card-small mb-4">
			<div class="card-header border-bottom">
				<h6 class="m-0">Personele Havale Et</h6>
			</div>
			<div class="card-body pb-2">
				<div class="row">
					<div class="col-sm-12 col-md-6">
						<form method="post">
							<div class="form-group col-md-6">
								<select id="officerSelect" name="selectedOfficerID" class="form-control" required>
									<option value="">Havale Edilecek Personeli Seçiniz</option>
									@foreach (var officer in Model)
									{
										if (officer.AssignableOfficerID != ViewBag.CurrentOfficerID) //
										{
											<option value="@officer.AssignableOfficerID">@officer.AssignableOfficerName</option>
										}

									}
								</select>
								<br />
								<button type="submit" class="btn btn-warning">Havale Et</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<a href="/RequestOfficer/Request/Details/@ViewBag.RequestID" class="btn btn-outline-danger pl-4 pr-4">İptal</a>

