@using TalepDestekCore.Areas.Admin.Models
@model List<AssignUnitViewModel>
@{
    ViewData["Title"] = "AssignUnit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var officerId = ViewBag.OfficerId;
}


<br />
<div class="row">
	<div class="col">
		<div class="card card-small mb-4">
			<div class="card-header border-bottom">
				<h6 class="m-0">Atanmış Birimleri Güncelle</h6>
			</div>
			<div class="card-body pb-2 ">
				<div class="row">
					<div class="col-md-6">
						<form method="post">
							@for (int i = 0; i < Model.Count; i++)
							{
								<div class="form-check">
									<input type="hidden" asp-for="@Model[i].UnitID" />
									<input type="hidden" asp-for="@Model[i].UnitName" />
									<input type="checkbox" asp-for="@Model[i].IsAssigned" class="form-check-input" />
									<label asp-for="@Model[i].IsAssigned" class="form-check-label">@Model[i].UnitName</label>
								</div>
							}
							<br />
							<button class="btn btn-primary">Atanan Birimleri Kaydet</button>
						</form>
					</div>
				</div>
				<br />
				<div class="row">
					<div class="col-md-6">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<a href="/Admin/User/Index" class="btn btn-outline-danger pl-4 pr-4">İptal</a>

