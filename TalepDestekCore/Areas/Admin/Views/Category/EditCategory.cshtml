@using DTOLayer.DTOs.CategoryDTOs
@model EditCategoryDTO
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
	<div class="col-12 col-sm-4 text-center text-sm-left mb-0">
		<span class="text-uppercase page-subtitle">Kategori Güncelle</span>
	</div>
</div>
<div class="row">
	<div class="col">
		<div class="card card-small mb-4">
			<div class="card-header border-bottom">
				<h6 class="m-0">Kategori Güncelle</h6>
			</div>
			<div class="card-body pb-2 ">
				<div class="row">
					<div class="col-md-6">
						<form method="post">
							@Html.HiddenFor(x => x.CategoryID)
							<div class="form-group">
								<label>Kategori Adı: </label>
								<input type="text" class="form-control" asp-for="CategoryName" />
							</div>
							<button class="btn btn-outline-primary">Kategoriyi Güncelle</button>
						</form>
					</div>
				</div>
				<br />
				<div class="row">
					<div class="col-md-6">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<a href="/Admin/Category/Index" class="btn btn-outline-danger">İptal</a>

