@using EntityLayer.Concrete
@model List<AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<br />
<span class="text-uppercase page-subtitle">Roller</span>

<div class="row">
	<div class="col">
		<div class="card card-small mb-4">
			<div class="card-header border-bottom">
				<h6 class="m-0">Aktif Roller</h6>
			</div>
			<div class="card-body p-0 pb-2 text-center">
				<table class="table mb-0">
					<thead class="bg-light">
						<tr>
							<th scope="col" class="border-0">#</th>
							<th scope="col" class="border-0">Rol Adı</th>
							<th scope="col" class="border-0">Rolü Sil</th>
							<th scope="col" class="border-0">Rolü Güncelle</th>
						</tr>
					</thead>
					@if (Model.Any())
					{
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@item.Name</td>
									<td><a href="#" class="btn btn-outline-danger">Rolü Sil</a></td>
									<td><a href="#" class="btn btn-outline-success">Rolü Güncelle</a></td>

								</tr>
							}
						</tbody>
					}
					else
					{
						<tbody>
							<tr>
								<td class="alert alert-danger">
									Rol Bulunamadı
								</td>
								<td class="alert alert-danger">
									#
								</td>
								<td class="alert alert-danger">
									#
								</td>
								<td class="alert alert-danger">
									#
								</td>
							</tr>
						</tbody>
					}

				</table>
			</div>
		</div>
	</div>
</div>

<td><a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Rol Ekle</a></td>
