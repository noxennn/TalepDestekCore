@using Microsoft.AspNetCore.Identity
@using DTOLayer.DTOs.ProfileDTOs
@model ChangePasswordDTO

<div class="page-header row no-gutters py-4">
	<div class="col-12 col-sm-4 text-center text-sm-left mb-0">
		<span class="text-uppercase page-subtitle">Şifre Değiştir</span>
		<h3 class="page-title">@ViewBag.Name @ViewBag.Surname İçin Şifre Değiştirme</h3>
		<h3 class="page-title">TC Kimlik No: @ViewBag.UserName</h3>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<div class="card card-small md-4">
			<div class="card-header border-bottom">
				<h6 class="m-0">Şifre Değiştir</h6>
			</div>
			<div class="card-body pb-2 ">
				<div class="row">
					<div class="col">
						<form method="post" asp-action="ChangePassword">
							<div class="form-group">
								<div class="input-group input-group-seamless">
									<input type="password" asp-for="NewPassword" class="form-control" placeholder="Şifre">
									<span class="input-group-append">
										<span class="input-group-text">
											<i class="material-icons">lock</i>
										</span>
									</span>
								</div
								<span asp-validation-for="NewPassword" class="text-danger"></span>
							</div>
							<div class="form-group">
								<div class="input-group input-group-seamless">
									<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Onayla">
									<span class="input-group-append">
										<span class="input-group-text">
											<i class="material-icons">lock</i>
										</span>
									</span>
								</div>
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>
							<div class="form-group">
								<div class="input-group input-group-seamless">
									<input type="password" asp-for="CurrentPassword" class="form-control" placeholder="Şuanki Şifreniz">
									<span class="input-group-append">
										<span class="input-group-text">
											<i class="material-icons">lock</i>
										</span>
									</span>
								</div>
								<span asp-validation-for="CurrentPassword" class="text-danger"></span>
							</div>

							<button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
						</form>
					</div>
				</div>
				<br />
				<div class="row">
					<div class="col-md-6">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<br />
<a href="/Profile/Index" class="btn btn-outline-danger pl-4 pr-4 ml-2">İptal</a>


